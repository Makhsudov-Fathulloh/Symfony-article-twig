{% extends "./base.html.twig" %}

{% block body %}
    <div class="col-12 col-md-12 mt-4 mt-md-4">
        <div class="row mb-4">

            <div class="text-center">
                <h3 class="display-1">Show article
                </h3>
            </div>

            <div class="col">
                <div class="text-center pt-8 pb-4 mb-5">
                    <img src="{{ article.imagePath }}" alt="" class="mb-4 mt-4" width="450" height="300"/>

                    <h1 class="mb-4 mt-4">{{ article.title }}</h1>

                    <h6 class="mb-4">{{ article.description }}</h6>

                        <p>
                            {{ article.text }}
                        </p>

                    <a
                            href="/articles/edit/{{ article.id }}"
                            class="btn btn-warning">
                        Edit
                    </a>

                    <a
                            href="/articles/delete/{{ article.id }}"
                            class="btn btn-danger">
                        Delete
                    </a>

                </div>
            </div>
        </div>
    </div>
{% endblock %}
